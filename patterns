num = int(input('enter a number:'))
for i in range(1, num):
    for j in range(1, num-i-1):
        print('',end=' ')
    for j in range(1, num):
        print('*',end=' ')
    print()
for a in range(num,0,-1):
    for b in range(0,num-a):
        print('',end=' ')
    for b in range(0, a):
        print('*',end=' ')
    print()
